<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#484349"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewCookFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cook First Name:"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewCookLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cook First Name:"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/textViewCookDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cook Description:"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/textViewCookRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cook Rating:"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>